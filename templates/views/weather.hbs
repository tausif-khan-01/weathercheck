<html>

  <head>
    <title>WeatherNow!</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/assets/favicon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="/css/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style></style>
  </head>

  <body class="">
    {{>header}}
    <main class="container mx-auto p-1 flex flex-col items-center">
      <div class="w-full">
        <form action="/getvalue" method="post"  class="bg-slate-800 my-10 p-1 md:p-2 mx-auto flex gap-1 max-w-lg justify-between rounded-md">
          <input type="text" id="searchArea" name="search" class="bg-transparent p-1 md:p-2 grow text-white outline-none" placeholder="Enter City" />
          <input type="submit" id="searchBtn" value="Search"  class="text-white  bg-yellow-400 hover:bg-opacity-80 font-medium cursor-pointer p-2 rounded-md" />
        </form>
      </div>

      <div class="font-roboto bg-slate-800 max-w-sm rounded-md p-2 flex flex-col gap-2 item-center text-white backdrop-blur-lg">
        <div class="bg-white bg-opacity-5 p-3 backdrop-blur-md flex flex-col">
          <div class="flex items-center text-white gap-2">
            <i class="fa-solid fa-location-dot text-yellow-400 text-lg"></i>
            <span class="tracking-wide" id="location"><span id="locationCity">{{hello}}</span>, <span id="locationCountry">IN</span></span>
          </div>

          <div class="flex flex-col">
            <span class="text-8xl text-white font-semibold my-2">
              <span id="temp">24</span><span class="text-6xl"><sup>o</sup>C</span>
            </span>
          </div>

          <div class="" id="weatherDescription">
            overcast clouds
          </div>
        </div>

        <div class="flex flex-col ">
          <div class="flex  tracking-wide  justify-evenly gap-2">
            <div class="flex flex-col   items-center  gap-1  justify-center min-w-max">
              <div class="font-mono text-xl">
                <span>MIN :</span> <span id="mintemp">27</span><sup>o</sup>C
              </div>
              <div class="font-mono text-xl">
                <span>MAX :</span> <span id="maxtemp">27</span><sup>o</sup>C
              </div>
              
            </div>

            <div class="w-1/2 flex justify-center items-center">
              <img src="/assets/weather/09d.svg" alt="" class="m-auto" />
            </div>
          </div>

          <div class="flex  items-center text-xl  justify-around  ">

            <div class="flex items-center gap-2">
              <div class="">
                <img src="/assets/drop-humidity-icon.svg" alt="" class="  w-6   m-auto" />
              </div>
              <div class="grow font-mono">75%</div>
            </div>

            <div class="flex items-center gap-2">
                <div class="">              
                  <img src="/assets/windsock-100.png" alt="" class="   w-6  m-auto" />
                </div>
                <div class="grow font-mono">15km/hr</div>
            </div>
          </div>

        </div>

        <div class="tracking-wider font-semibold mt-4">
          <div class="bg-white bg-opacity-5 p-3 backdrop-blur-md text-xl">
            Friday
          </div>
        </div>

      </div>

    </main>

    <!-- Initialize Swiper -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="/scripts/swiper.js"></script>
    <script type="module" src="/scripts/script.js"></script>
  </body>

</html>